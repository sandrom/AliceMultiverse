---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  truthy:
    check-keys: false
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
    indent-sequences: true
  document-start:
    present: false
  brackets:
    max-spaces-inside: 1
  braces:
    max-spaces-inside: 1