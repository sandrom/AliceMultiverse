# AliceMultiverse Environment Variables
# Copy this file to .env and fill in your values

# API Keys (optional - enhances quality assessment)
# Get your SightEngine key at: https://sightengine.com/
SIGHTENGINE_API_USER=your_user_here
SIGHTENGINE_API_SECRET=your_secret_here

# Get your Anthropic key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Database location (optional - defaults to ~/.alicemultiverse/alicemultiverse.db)
# DATABASE_URL=sqlite:///path/to/your/database.db

# Default paths (optional - can override in settings.yaml)
# ALICE_INBOX_PATH=~/Downloads/AI-Images
# ALICE_ORGANIZED_PATH=~/Pictures/AI-Organized